<!-- leaflet-locatecontrol js  -->
<script>
  // Building coordinates for customers
  const buildingCoordinates = [
    [-15.9017203438969, 35.21366076270135], // Building 1
    [-15.901477714108713, 35.21332806322287], // Building 2
    [-15.901266061291512, 35.21388614147], // Building 3
    [-15.90088973050024, 35.21264657952471], // Building 3
    [-15.89948040288662, 35.21343003313538], // Building 3
  ];
  // Create a map instance
  const map = L.map("map").setView([-15.78377575585279, 35.02166748046876], 10);

  // Add a tile layer (using OpenStreetMap)
  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution: "TPKfood",
  }).addTo(map);

  // locating where rider is
  L.control.locate().addTo(map);

  // Create a custom icon for restaurants
  const customIcon = L.icon({
    iconUrl: "https://img.icons8.com/ios-filled/50/restaurant--v1.png",
    iconSize: [20, 20], // Set the size of the icon
  });

  // Add markers for the restaurants coordinates
  buildingCoordinates.forEach(function (coords, index) {
    const marker1 = L.marker(coords, { icon: customIcon }).addTo(map);
    marker1
      .bindPopup(
        `<a style="text-decoration: none;" href="../pages/cart.html">Visit</a> Restaurant ${
          index + 1
        }`
      )
      .openPopup();
  });
</script>
